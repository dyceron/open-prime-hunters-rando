{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "areas": {
            "type": "object",
            "properties": {
                "Celestial Archives": {
                    "$ref": "#/$defs/area"
                },
                "Alinos": {
                    "$ref": "#/$defs/area"
                },
                "Arcterra": {
                    "$ref": "#/$defs/area"
                },
                "Vesper Defense Outpost": {
                    "$ref": "#/$defs/area"
                },
                "Oubliette": {
                    "$ref": "#/$defs/area"
                }
            },
            "default": {},
            "additionalProperties": false
        }
    },
    "$defs": {
        "area": {
            "type": "object",
            "properties": {
                "levels": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "$ref": "#/$defs/level"
                        }
                    }
                }
            },
            "required": [
                "levels"
            ],
            "additionalProperties": false
        },
        "level": {
            "type": "object",
            "properties": {
                "item_spawns": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "entity_id": {
                                "type": "integer",
                                "description": "The id of the Item Spawn entity."
                            },
                            "item_type": {
                                "type": "string",
                                "$ref": "#/$defs/item_types",
                                "description": "The item type to change the entity into."
                            }
                        },
                        "required": [
                            "entity_id",
                            "item_type"
                        ]
                    },
                    "default": []
                },
                "artifacts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "entity_id": {
                                "type": "integer",
                                "description": "The id of the Artifact entity."
                            },
                            "model_id": {
                                "type": "integer",
                                "miniumum": 0,
                                "maximum": 8,
                                "description": "The id of the model to use for the artifact."
                            },
                            "artifact_id": {
                                "type": "integer",
                                "miniumum": 0,
                                "maximum": 7,
                                "description": "The id of the artifact."
                            }
                        },
                        "required": [
                            "entity_id",
                            "model_id",
                            "artifact_id"
                        ]
                    },
                    "default": []
                }
            }
        },
        "item_types": {
            "type": "string",
            "enum": [
                "None",
                "HealthMedium",
                "HealthSmall",
                "HealthBig",
                "DoubleDamage",
                "EnergyTank",
                "VoltDriver",
                "MissileExpansion",
                "Battlehammer",
                "Imperialist",
                "Judicator",
                "Magmaul",
                "ShockCoil",
                "OmegaCannon",
                "UASmall",
                "UABig",
                "MissileSmall",
                "MissileBig",
                "Cloak",
                "UAExpansion",
                "ArtifactKey",
                "Deathalt",
                "AffinityWeapon",
                "PickWpnMissile"
            ]
        }
    }
}